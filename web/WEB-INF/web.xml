<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>controller.USTORE_ServletListener</listener-class>
    </listener>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>100</error-code>
        <location>/cart_error.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/content_error.html</location>
    </error-page>
    <error-page>
        <error-code>102</error-code>
        <location>/login_error.html</location>
    </error-page>
    <error-page>
        <error-code>103</error-code>
        <location>/missing_page_error.html</location>
    </error-page>
</web-app>
